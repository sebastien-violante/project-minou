{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<section class="home">
    <section id="left">
		<h1>Les dernières actualités...</h1>
		<section id="actualité">
		{% for article in articles %}
			<article>
			<img class="article-picture" src='/pictures/{{article.picture}}'>
			<h1 class="article-title">{{ article.title }}</h1>
			<p>{{ article.date|date('Y-m-d H:i') }}</p>
			<p class="article-text">{{ article.text}}</p>
			</article>
			<hr>
		{% endfor %}
		</section>
	</section>
    <section id="right">
      <section class="chats">
        <h1>Vos chats</h1>
		<hr>
		<div class="slider">
                    {# {% for recommendation in recommendations %}
                        <div class="place">
                            <img class="place-picture" src="{{ asset(recommendation.picture) }}">
                            <p class="place-name">{{ recommendation.name }}</p>
                            <div class="geoloc">
                                <img class="geoloc-icon" src="{{ asset('build/pictures/geoloc.png') }}">
                                <p class="place-distance">{{ recommendation.distance }}</p>
                            </div>
                        </div>
                    {% endfor %} #}
                </div>
      </section>

      <section class="soins">
		<h1>Les conseils des professionnels</h1>
		<hr>
		<div id="buttons">
            <button class="advice">Les soins dès le plus jeune âge</button>
            <button class="advice">Le calendrier des vaccinations</button>
            <button class="advice">Bien choisir son chat persan</button>
            <button class="advice">Comportements à risque</button>
		</div>
      </section>
    </section>  
</section>
{% endblock %}
