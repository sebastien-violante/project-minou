{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Liste des chats{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<h5 class="top-title">LISTE DE VOS CHATS</h5>

    {% if cats is empty %}
    <div class="no-cat">
        <p class="info">Vous n'avez pas encore enregistré de chat.</p>
        <p class="info">Rendez-vous dans la barre de menus, onglet "Chats" puis "Nouveau" pour le faire.</p>
    </div>
    {% endif %}
    <div class="cat-list">
    {% for cat in cats %}
        <div class="card">
            <img class="cat-picture" src="/pictures/{{ cat.picture }}">
            <div class="cat-btns">
                {% if cat.islost %}
                        <a class="btn btn-primary" href="{{ path('displayreport', {id: cat.id})}}">Localiser</a>
                        <a class="btn btn-success" href="{{ path('found', {id: cat.id})}}">Retrouvé !</a>
                {% endif %}
                <a class="btn btn-danger" href="{{ path('deletecat', {id: cat.id})}}">Supprimer</a>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
