{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Connectez-vous</h1>
    <hr>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    <form action="{{ path('login') }}" method="post">
    <div class="mb-3">
        <label for="username" class="form-label">Email</label>
        <input type="email" class="form-control" id="username" name="_username" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>



    
        {# <label for="username">Email:</label>
        <input type="text" id="username" name="_username"     value="{{ last_username }}"/> #}

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/>

        {# on succes, redirect user to home page #}
        <input type="hidden" name="_target_path" value="/home"/>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit">login</button>
    </form>

    <a class="nav-link active" href="{{ path('app_register') }}"><span>Pas encore de compte ? C'est par </span>ici</a>
    
</div>

{% endblock %}
