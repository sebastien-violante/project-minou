{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('selected') }}
{% endblock %}

{% block title %} {{ parent() }} - Cahts perdus{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="displaylost">

    <h5 class='top-title'>liste des chats perdus sur la commune de {{ place }} </h5>
    
    {% if cats is empty %}
            <div class="center">
            <img id="no-cat-lost" class="linear-opacity" src="./pictures/happy-cat-picture.jpg"/>
            </div>
            <p class="info">Apparemment, il n'y a aucun chat déclaré perdu sur cette commune !</p>
            <div class="center">
            <a href="{{ path('home')}}" class="btn btn-success search">Revenir à l'accueil</a>
            </div>
    {% else %}
        <p>Il y a {{ length }} résultats à votre recherche</p>
        

   {#  Affichage des chats perdus #}
    <div class="slider">
    {% for cat in cats %}
        <div class="card">
            <div class="topcard">
                <p>{{ cat.name }}</p>
                <p>Déclaré perdu :<br>{{ cat.datelost ? cat.datelost|date('Y-m-d H:i:s') : '' }}</p>
            </div>
            <img class="cat-picture" src="/pictures/{{ cat.picture }}"</img>
            <p>Signes distinctifs :<br> {{ cat.details }}</p>
            <a href="{{ path("report", {"cat_id": cat.id }) }}" class="btn btn-warning">Signaler</a>
        </div>
    {% endfor %}
    </div>
    {% endif %}
{% endblock %}
