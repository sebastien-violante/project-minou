    <td>Latitude</td>
    <td>Logitude</td>
    <td>Etat de santé</td>
    <td>Message du lanceur d'alerte</td>
  </tr>
  {% for report in reports %}
  <tr>
    <td>{{  report.date|date('d-m-Y H : i') }}</td>
    <td>{{  report.coordx }}</td>
    <td>{{  report.coordy }}</td>
    <td>{{  report.status }}</td>
    <td>{{  report.message }}</td>
  </tr>
