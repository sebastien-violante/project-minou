{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Détail article{% endblock %}

{% block body %}
<section class="article-crud">
    <h3 class=".crud-theme-title">Détail de l'article</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ article.picture }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ article.text }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_article_index') }}">Retour à la liste</a>

    <a class="btn btn-outline-primary" href="{{ path('app_article_edit', {'id': article.id}) }}">Modifier</a>

    {{ include('article/_delete_form.html.twig') }}
</section>
{% endblock %}
