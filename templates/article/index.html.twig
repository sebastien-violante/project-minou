{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Liste articles{% endblock %}

{% block body %}
<section class="article-crud">
    <h3 class="crud-theme-title">Les articles édités</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Détails</th>
                    <th>Date</th>
                    <th>Photo</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td id="details">
                        <p id="article-title">{{article.title}}</p>
                        <p class="article-text">{{ article.text }}</p>
                    </td>
                    <td>{{ article.date|date('Y-m-d H:i') }}</td>
                    <td><img class="article-picture-crud" src="/pictures/{{ article.picture }}"/></td>
                    <td>
                        <a class="btn btn-outline-primary" href="{{ path('app_article_show', {'id': article.id}) }}">Détails</a>
                        <a class="btn btn-outline-primary" href="{{ path('app_article_edit', {'id': article.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun article trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
    <a href="{{ path('new-article') }}" class="btn btn-success crud-link">Créer un nouvel article</a>
{% endblock %}
