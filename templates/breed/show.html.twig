{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Races{% endblock %}

{% block body %}
    <h4>Détails de la race</h4>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ breed.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ breed.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_breed_index') }}">Retour à la liste</a>

    <a class="btn btn-outline-warning" href="{{ path('app_breed_edit', {'id': breed.id}) }}">Modifier</a>

    {{ include('breed/_delete_form.html.twig') }}
{% endblock %}
